@model Xeber.Models.RegisterViewModel
@using Xeber.Models

@{
    ViewBag.Title = "Qeydiyyat";
}
<style>
   
    .input {
        border: 1px solid #e5e5e5;
        border-radius: 5px;
        outline: 0;
        padding: 23px 21px;
        margin-bottom: 10px;
        font-size: 13px;
        width: 137% !important;
        /*margin-left: 20%;*/
    }

    .submit {
        background: #abd46e;
        font-size: 15px;
        color: white;
        font-weight: bold;
        letter-spacing: 1px;
    }
        .submit:hover {
            background: #719e37;
            font-size: 15px;
            color: white;
        }
        .submit:active {
            background: #abd46e;
            font-size: 15px;
            color: white;
        }
</style>
<h2 style="text-align:center; color:rgb(172, 198, 151);">@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-8">
            <div class="col-md-2 control-label">
                <label for="Email" style="color:rgb(172, 198, 151);">Email adresiniz:</label>
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email adresiniz:", @class = "form-control input .form" })
            </div>
            </div>
            <div class="col-md-4">
                <p>There are no external authentication services configured.</p>
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-8">
                <div class="col-md-2 control-label">
                    <label for="Password" style="color:rgb(172, 198, 151);">Şifrə daxil edin:</label>
                </div>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Şifrə daxil edin:", @class = "form-control input form" })
                </div>
            </div>
      
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-8">
                <div class="col-md-2 control-label">
                    <label for="ConfirmPassword" style="color:rgb(172, 198, 151);">Şifrəni təsdiq edin:</label>
                </div>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Şifrəni təsdiq edin:", @class = "form-control input form" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default submit" value="Göndər" />
            </div>
        </div>

        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
