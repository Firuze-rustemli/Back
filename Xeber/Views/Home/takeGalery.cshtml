@using Xeber.Models;

@{
    ViewBag.Title = "takeGalery";
}

@foreach (news item in ViewBag.galery)
{
<div class="col-md-3 col-sm-6  fadeIn animated" style="visibility: visible;">
    <div class="layout_2--item  fadeIn animated" style="visibility: visible;">
        <div class="thumb  fadeIn animated" style="visibility: visible;">
            <a href="@Url.Action("read","news", new {id=item.id})"><img src="~/Public/images/@item.photo" class="img-responsive" alt=""></a>
        </div>
        <span class="cat">@item.description</span>
        <h4><a href="#">@item.content.Substring(0,50)..</a></h4>
        <div class="meta  fadeIn animated" style="visibility: visible;"><span class="date">@item.date.ToString("dd.MMMM.yy")</span><span class="comments">@item.comment.Count</span></div>
    </div>
</div>
}

